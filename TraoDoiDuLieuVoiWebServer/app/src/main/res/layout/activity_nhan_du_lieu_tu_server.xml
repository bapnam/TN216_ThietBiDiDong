<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NhanDuLieuTuServer">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/lst_dulieu"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_nhan"
            style="@style/ButtonStyle"
            android:text="Nhận dữ liệu"
            android:onClick="ThucHienNhanDuLieu"/>

        <Button
            android:id="@+id/btn_xoa"
            style="@style/ButtonStyle"
            android:text="Xóa dữ liệu"
            android:onClick="XoaDuLieu"/>
    </LinearLayout>

</LinearLayout>